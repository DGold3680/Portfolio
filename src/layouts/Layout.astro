---
import { ViewTransitions, slide } from "astro:transitions";
import Navbar from "../components/Navbar.astro";
// import Sidebar from "../components/Sidebar";
export interface Props {
  title?: string;
}
const { title = "Gold.js" } = Astro.props as Props;
const navigationPage = Astro.url.pathname.includes("/navigation");
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Astro description" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;600;700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions transition:animate="none" />
  </head>
  <body
    class="font-normal font-sans text-main bg-bg 2xl:flex flex-col items-center"
    transition:animate={slide({ duration: "0.05s" })}
  >
    <div class="xl:max-w-screen-2xl">
      {navigationPage ? null : <Navbar />}
      <main>
        <slot />
      </main>
    </div>
    <style is:global>
      html {
      }
    </style>
  </body>
</html>
