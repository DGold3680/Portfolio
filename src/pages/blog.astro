---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import HeroImg from "../components/HeroImg.astro";
import { getCollection } from "astro:content";
import BlogCardMobile from "../components/Blog-card-mobile";
import BlogCard from "../components/Blog-card";

const articles = await getCollection("article");
---

<Layout>
  <div>
    <section id="about" class="lg:flex my-4 px-6 md:px-12">
      <Hero />
      <HeroImg />
    </section>
    <section id="blog" class="mt-16 px-6 md:px-12">
      <div>
        <h2
          class="text-7xl md:text-center md:capitalize md:text-8xl xl:text-9xl font-extrabold text-white opacity-20 md:opacity-10 mb-4"
        >
          My Blog
        </h2>
      </div>
      <div class=" md:hidden">
        {
          articles.map((info, i) => {
            return <BlogCardMobile info={info.data} />;
          })
        }
      </div>
      <div class="hidden md:block">
        {
          articles.map((info, i) => {
            return <BlogCard info={info.data} />;
          })
        }
      </div>
    </section>
  </div>
</Layout>
