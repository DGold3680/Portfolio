---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero";
import heroImg from "../assets/heroImg.png";
// import HeroImg from "../components/HeroImg";
---

<Layout>
  <div class="flex my-12">
    <div class="basis-1/2 pr-12">
      <Hero />
    </div>
    <div class="flex basis-1/2 justify-between">
      <Image src={heroImg} alt="" />
      <div class="bg-bg/5 shadow-xl shadow-neutral-900 [height:96%] flex justify-end rounded-[72px] p-10">
        <p
          class="inline-block [writing-mode:vertical-lr] text-7xl font-bold text-tert opacity-20 my-auto"
        >
          Let's Build
        </p>
      </div>
    </div>
    <!-- <HeroImg /> -->
  </div>
</Layout>
